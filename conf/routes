# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.projectOverview()

# Project Overview
GET     /projects                           controllers.Application.projectOverview()

# User Overview
GET     /employee                           controllers.Application.employeeOverview()

# Project Add View
GET     /projects/add                           controllers.Application.projectAdd()

# Project View
GET     /projects/:id                            controllers.Application.projectView(id: Int)

# Employee View
GET     /employee/:id                           controllers.Application.employeeView(id: String)

# Project Add and Save
POST     /projects                          controllers.Application.projectAddSave()


# Project Edit
GET     /projects/1/edit                           controllers.Application.projectEdit()

# Project Edit
#PUT    /projects/1/                           controllers.Application.projectEditSave()

# Delete Project
DELETE /projects/:id						controllers.Application.deleteProject(id: Int)

# Add User in Project Edit
GET     /projects/1/addemployee                           controllers.Application.projectEditAddEmployee()

# Admin Index
GET     /admin                           controllers.Application.adminIndex()

# Sync Database in Admin View
GET     /admin/syncdb                           controllers.Application.adminSyncDb()

# Add Employee in Project Edit save
#POST     /projects/1/adduser                           controllers.Application.projectEditAddEmployeeSave()

# Delete Employee in Project Edit
#POST     /projects/1/deleteEmployee                          controllers.Application.projectEditDeleteEmployee()


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
